<!DOCTYPE HTML>
<div class="container">
    <p></p>
    <h1> {{title}} </h1>

    <h5><a href="/">Go back to the home page</a></h5>
    <p></p>

        <h4>Add Ability</h4>

    <div class="box">
        <div class="subtitle is-5"></div>
        <form id="addability" action="/ability" method="post">

             <!-- get ability name  -->
            <div class="field">
                <label class="label">Ability Name</label>
                <input class="input" type="text" name="name" placeholder="">
            </div>

            <!-- Submit -->
            <div class="field">
                <input class="button is-info" type="submit" value="Submit">
            </div>

        </form>  
    </div>

    <p></p>

    <table class="table is-bordered is-striped is-fullwidth table-striped">
        <thead class="thead-dark"> 
            <th>Type</th> 
            <th></th>
        </thead> 
        <tbody> 
            {{#each results}} 
            <tr> 
                <td>{{this.type}}</td> 
                <td>
                    <a href="/deleteAbility/{{this.id}}">
                        <input type="button" value="Delete">
                    </a>
                </td>
            </tr> 
            {{/each}} 
        </tbody> 
    </table> 
</div>