<!DOCTYPE HTML>
<div class="container">
    <p></p>
    <h1> {{title}}: {{sprenName}} </h1>

    <h5><a href="/">Go back to the home page</a></h5>

    <table class="table is-bordered is-striped is-fullwidth table-striped">
        <thead class="thead-dark"> 
            <th>Type</th> 
            <th>Name</th> 
        </thead> 
        <tbody> 
            {{#each results}} 
            <tr> 
                <td>{{this.type}}</td> 
                <td>{{this.name}}</td> 
            </tr> 
            {{/each}} 
        </tbody> 
    </table> 

    <hr>

    <h3>Update {{sprenName}}:</h3>
    <form id="update-spren" action="/updateSpren" method="post">
       Spren Name: <input type="text" name="name" value="{{sprenName}}"><br>
       Type: <input type="text" name="type" value="{{type}}"><br>
       <input type = "hidden" name = "id" value = "{{id}}" />
       <div class="field">
               <input class="button is-info" type="submit" value="Submit">
       </div>
    </form>
</div>