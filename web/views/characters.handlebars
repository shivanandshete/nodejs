<!DOCTYPE HTML>

<div class="container">
    <p></p>
    <h1> {{title}} </h1>

    <h5><a href="/">Go back to the home page</a></h5>

    <p></p>

    <h4>Add Character</h4>

    <div class="box">
        <div class="subtitle is-5"></div>
        <form id="addcharacter" action="/characters" method="post">

            <!-- get first name -->
            <div class="field">
                <label class="label">First Name</label>
                <input class="input" type="text" name="first_name" placeholder="Rick">
            </div>

             <!-- get last name -->
            <div class="field">
                <label class="label">Last Name</label>
                <input class="input" type="text" name="last_name" placeholder="Astley">
            </div>

            <!-- get nickname -->
            <div class="field">
                <label class="label">Nickname</label>
                <input class="input" type="text" name="nickname" placeholder="">
            </div>

            <!-- get race -->
            <div class="field">
                <label class="label">Race</label>
                <input class="input" type="text" name="race" placeholder="">
            </div>

            <!-- get homeland -->
            <div class="field">
                <label class="label">Homeland</label>
                <input class="input" type="text" name="homeland" placeholder="">
            </div>

            <!-- Submit -->
            <div class="field">
                <input class="button is-info" type="submit" value="Submit">
            </div>

        </form>  
    </div>
</div>

<p></p>

<div class="container">
    <table class="table is-bordered is-striped is-fullwidth table-striped">
        <thead class="thead-dark">
            <th>Char ID</th> 
            <th>First Name</th> 
            <th>Last Name</th> 
            <th>Nickname</th>
            <th>Race</th>  
            <th>Homeland</th>
            <th></th> 
            <th></th> 
        </thead> 
        <tbody> 
            {{#each results}} 
            <tr> 
                <td>{{this.id}}</td>
                <td>{{this.first_name}}</td> 
                <td>{{this.last_name}}</td> 
                <td>{{this.nickname}}</td> 
                <td>{{this.race}}</td>
                <td>{{this.homeland}}</td>
                <td><a href="/characters/{{this.id}}">Update</a></td>
                <td>
                    <a href="/deleteCharacter/{{this.id}}">
                        <input type="button" value="Delete">
                    </a>
                </td>
            </tr> 
            {{/each}} 
        </tbody> 
    </table> 
</div>
