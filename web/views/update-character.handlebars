<!DOCTYPE HTML>
<div class="container">
  <p></p>
  <h1>{{title}}: {{firstName}}</h1>

  <h5><a href="/">Go back to the home page</a></h5>

  <table class="table is-bordered is-striped is-fullwidth table-striped">
      <thead class="thead-dark"> 
          <th>First Name</th> 
          <th>Last Name</th> 
          <th>Nickname</th>
          <th>Race</th>  
          <th>Homeland</th> 
      </thead> 
      <tbody> 
          {{#each results}} 
          <tr> 
              <td>{{this.first_name}}</td> 
              <td>{{this.last_name}}</td> 
              <td>{{this.nickname}}</td> 
              <td>{{this.race}}</td>
              <td>{{this.homeland}}</td>
          </tr> 
          {{/each}} 
      </tbody> 
  </table> 

  <hr>

  <h3>Update {{firstName}}:</h3>
  <form id="update-character" action="/updateCharacter" method="post">
     First Name: <input type="text" name="first_name" value="{{firstName}}"><br>
     Last Name: <input type="text" name="last_name" value="{{lastName}}"><br>
     Nickname: <input type="text" name="nickname" value="{{nickname}}"><br>
     Homeland: <input type="text" name="race" value="{{charRace}}"><br>
     Race: <input type="text" name="homeland" value="{{homeland}}"><br>
     <input type = "hidden" name = "id" value = "{{id}}" />
     <div class="field">
             <input class="button is-info" type="submit" value="Submit">
     </div>
  </form>
</div>
